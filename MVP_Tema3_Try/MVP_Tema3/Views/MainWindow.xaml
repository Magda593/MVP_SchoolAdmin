<Window x:Class="MVP_Tema3.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVP_Tema3.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Functie:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="44" Margin="0,20"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button FontFamily="Arial" Content=" Administrator " Margin="5" HorizontalAlignment="Stretch" Height="100" FontSize="60" Click="Administrator_Click"/>
            <Button FontFamily="Arial" Content=" Diriginte " Margin="5" HorizontalAlignment="Stretch" Height="100" FontSize="60"/>
            <Button FontFamily="Arial" Content=" Profesor " Margin="5" HorizontalAlignment="Stretch" Height="100" FontSize="60"/>
            <Button FontFamily="Arial" Content=" Student " Margin="5" HorizontalAlignment="Stretch" Height="100" FontSize="60" Click="Student_Click"/>
        </StackPanel>
    </Grid>
</Window>
